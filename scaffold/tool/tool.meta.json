    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Name to include in the greeting (defaults to World)"
      }
    }
  },
  "outputSchema": {
    "type": "object",
    "required": ["success", "result"],
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether the operation succeeded"
      },
      "result": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "type": "string",
            "description": "Human-readable message produced by the tool"
          }
        }
      }
    }
  },
  "annotations": {
