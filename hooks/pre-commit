#!/usr/bin/env bash
# Local Git pre-commit hook: run shell linting before commits.
# To enable, set in this repo:
#   git config core.hooksPath hooks

set -euo pipefail

if [ ! -x "./test/lint.sh" ]; then
	echo "pre-commit: ./test/lint.sh not found or not executable" >&2
	exit 1
fi

./test/lint.sh

