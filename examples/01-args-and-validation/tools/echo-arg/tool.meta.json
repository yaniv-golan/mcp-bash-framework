{
  "name": "example-echo-arg",
  "description": "Echos a provided value",
  "inputSchema": {
    "type": "object",
    "properties": {
      "value": {"type": "string"}
    },
    "required": ["value"]
  },
  "outputSchema": {
    "type": "object",
    "required": ["success", "result"],
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether the operation succeeded"
      },
      "result": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "type": "string",
            "description": "Echoed string"
          }
        }
      }
    }
  },
  "timeoutSecs": 10
}
