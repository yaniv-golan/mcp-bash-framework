{
  "version": 1,
  "tools": [
    {
      "name": "manual.progress",
      "description": "Emit progress updates from a manual registry entry",
      "path": "progress-demo.sh",
      "timeoutSecs": 8,
      "inputSchema": {
        "type": "object",
        "properties": {}
      },
      "outputSchema": {
        "type": "object",
        "required": ["success", "result"],
        "properties": {
          "success": { "type": "boolean" },
          "result": {
            "type": "object",
            "properties": {
              "message": { "type": "string" }
            }
          }
        }
      }
    }
  ],
  "resources": [
    {
      "name": "echo.hello",
      "description": "Echo provider demo for manual registry entries",
      "path": "echo-placeholder.txt",
      "uri": "echo://Hello-from-manual-registry",
      "mimeType": "text/plain",
      "provider": "echo"
    }
  ],
  "prompts": [
    {
      "name": "manual.prompt",
      "description": "Explain how registry overrides work",
      "path": "manual.prompt.txt",
      "arguments": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string"
          }
        }
      }
    }
  ]
}
